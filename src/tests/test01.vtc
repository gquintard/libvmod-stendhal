varnishtest "Basic test"

server s1 {
	rxreq
	expect req.url == /s1
	txresp
} -start

server s2 {
	rxreq
	expect req.url == /s2
	txresp
} -start

server s3 {
	rxreq
	expect req.url == /s3
	txresp
} -start

varnish v1 -vcl+backend {
	import stendhal from "${vmod_topbuild}/src/.libs/libvmod_stendhal.so";

	sub vcl_init {
		new smf = stendhal.director();
		smf.add_backend("/s1", s1);
		smf.add_backend("/s2", s2);
		smf.add_backend("/s3", s3);
	}

	sub vcl_recv {
		set req.backend_hint = smf.backend(req.url);
	}
} -start

client c1 {
	txreq -url "/s1"
	rxresp
	expect resp.status == 200

	txreq -url "/s2"
	rxresp
	expect resp.status == 200

	txreq -url "/s3"
	rxresp
	expect resp.status == 200
} -run
