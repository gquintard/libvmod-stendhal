varnishtest "Test stendhal vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import std;
	import stendhal from "${vmod_topbuild}/src/.libs/libvmod_stendhal.so";

	sub vcl_init {
		std.log(stendhal.info());
	}

	sub vcl_deliver {
		set resp.http.hello = stendhal.hello("World");
		set resp.http.info = stendhal.info();
	}
} -start

logexpect l1 -v v1 -g raw -d 1 {
	expect 0 0    CLI     {^Rd vcl.load}
	expect 0 =    VCL_Log {^vmod_stendhal loaded at }
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
	expect resp.http.info  ~  "^vmod_stendhal warmed at "
}

client c1 -run

logexpect l1 -wait
